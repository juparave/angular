source 'https://rubygems.org'

# Jekyll core
gem 'jekyll', '~> 3.9' # Corresponds to a version often used by GitHub Pages for compatibility

# Theme
gem 'jekyll-rtd-theme'

# Plugins listed in _config.yml (and commonly used)
gem 'jekyll-seo-tag'
gem 'jekyll-sitemap'
gem 'jekyll-github-metadata'

# Other plugins from the build log that might be needed if not pulled by the above
gem 'jekyll-coffeescript'
gem 'jekyll-commonmark-ghpages' # Or 'jekyll-commonmark' if this specific one causes issues
gem 'jekyll-gist'
gem 'jekyll-paginate'
gem 'jekyll-relative-links'
gem 'jekyll-optional-front-matter'
gem 'jekyll-readme-index'
gem 'jekyll-default-layout'
gem 'jekyll-titles-from-headings'
